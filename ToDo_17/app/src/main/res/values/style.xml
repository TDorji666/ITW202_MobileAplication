<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>

    </style>
    <style name="ScoreBtn" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/circle_shape</item>
    </style>
    <style name="PlusBtn" parent="ScoreBtn">
        <item name="android:src">@drawable/ic_baseline_add_24</item>
    </style>
    <style name="subBtn" parent="ScoreBtn">
        <item name="android:src">@drawable/ic_baseline_remove_24</item>
    </style>
    <style name="ScoreTxt">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
    </style>

</resources>